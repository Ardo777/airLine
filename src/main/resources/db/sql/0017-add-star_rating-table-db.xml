<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="0017-add-star_rating-table-db.xml" author="Ardo777">
        <createTable tableName="star_rating">

            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column defaultValue="0" name="rating" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="company_id" type="int">
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="star_rating"
                                 baseColumnNames="company_id"
                                 constraintName="fk_star_rating_company"
                                 referencedTableName="company"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="star_rating"
                                 baseColumnNames="user_id"
                                 constraintName="fk_star_rating_user"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>