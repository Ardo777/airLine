<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="VSahakyan" id="0003-init-db">
        <dropTable tableName="manager"/>
        <modifyDataType tableName="user" columnName="role" newDataType="enum('USER', 'ADMIN','MANAGER')"/>
        <addColumn tableName="user">
            <column name="company_id"
                    type="int">
                <constraints nullable="true" foreignKeyName="fk_user_company_id_company" references="company(id)"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>